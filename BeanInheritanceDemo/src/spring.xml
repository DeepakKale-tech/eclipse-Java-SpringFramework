<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- bean definitions here -->

	<bean id="e1" class="com.model.Employee">
		<constructor-arg value="101" />
		<constructor-arg value="Deepak" />
	</bean>

	<bean id="address1" class="com.model.Address">
		<constructor-arg value="23,GT Street" />
		<constructor-arg value="ChingChong Area" />
		<constructor-arg value="Tokyo" />
		<constructor-arg value="Japan" />
	</bean>

	<bean id="e2" class="com.model.Employee" parent="e1">
		<constructor-arg ref="address1" />
	</bean>
</beans>